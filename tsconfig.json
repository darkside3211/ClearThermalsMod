{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "noImplicitAny": true
    },
    "include": [
        "src/**/*.ts"
    ]
}

